    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCecoGzpgoA5EGcf9icFVh_kpt5sMaBdx4&libraries=places&callback=initMap"></script>
    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
